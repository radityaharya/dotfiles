// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "google",
      "model": "gemini-1.5-pro"
    },
    "version": "2"
  },
  "vim_mode": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "ui_font_family": "Open Sans",
  "buffer_font_family": "SauceCodePro Nerd Font",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Atelier Forest Dark"
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": ""
    }
  },
  "lsp": {
    "yioneko/vtsls": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    }
  },
  "experimental.theme_overrides": {
    "editor.background": "#000",
    "background": "#000",
    "status_bar.background": "#000",
    "title_bar.background": "#000",
    "title_bar.inactive_background": "#000",
    "toolbar.background": "#000",
    "tab_bar.background": "#000",
    "tab.inactive_background": "#121212",
    "tab.active_background": "#000",
    "search.match_background": "#000",
    "panel.background": "#000",
    "elevated_surface.background": "#000",
    "editor.gutter.background": "#000",
    "editor.subheader.background": "#000",
    "editor.active_line.background": "#000",
    "editor.highlighted_line.background": "#000",
    "syntax": {
      "comment": {
        "font_style": "italic"
      }
    }
  }
}
